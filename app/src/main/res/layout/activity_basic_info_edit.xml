<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_picture_jumbo_height"
        android:background="?attr/selectableItemBackground">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/user_picture_chooser_background"/>

        <ImageView
            android:id="@+id/basic_info_edit_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_picture_jumbo_height"
            android:src="@drawable/ic_baseline_person_24px"
            android:scaleType="fitCenter"
            android:contentDescription="@string/choose_user_picture"/>
    </FrameLayout>

</LinearLayout>